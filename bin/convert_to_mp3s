#!/bin/bash 

video_dir=videos
mp3_dir=mp3
files=`ls $video_dir`

for file in $files; do
  basename=`basename $file mp4`
  target_file="$mp3_dir/$basename""mp3"
  source_file=$video_dir/$file
  if [ ! -f $target_file ]; then
    echo "Converting $source_file"
    avconv -i  $source_file -vn -ab 128k $target_file
  fi
done 
